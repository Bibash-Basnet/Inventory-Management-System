@model Inventory.Models.DTO.Auth.UserRegisterDto
@{
    ViewData["Title"] = "Register";
}

<div class="center-content">
    <div class="form-container" style="max-width: 500px;">
        <div class="text-center mb-4">
            <i class="bi bi-person-plus" style="font-size: 3rem; color: #198754;"></i>
            <h3 class="mt-2">Create Account</h3>
            <p class="text-muted">Join our inventory system</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="bi bi-exclamation-circle"></i> @ViewBag.Error
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="bi bi-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">
                    <i class="bi bi-person"></i> Username
                </label>
                <input asp-for="Username" class="form-control" placeholder="Choose a username" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    <i class="bi bi-envelope"></i> Email
                </label>
                <input asp-for="Email" type="email" class="form-control" placeholder="your.email@example.com" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    <i class="bi bi-lock"></i> Password
                </label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Create a strong password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    <i class="bi bi-lock-fill"></i> Confirm Password
                </label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Re-enter your password" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label">
                    <i class="bi bi-shield-check"></i> Register As
                </label>
                <div class="d-grid gap-2">
                    <div class="form-check role-option">
                        <input class="form-check-input" type="radio" name="role" id="roleUser" value="User" checked>
                        <label class="form-check-label w-100" for="roleUser">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <i class="bi bi-person-circle text-primary"></i>
                                    <strong>Regular User</strong>
                                    <br>
                                    <small class="text-muted">View and browse products</small>
                                </div>
                                <i class="bi bi-check-circle text-success" style="display: none;"></i>
                            </div>
                        </label>
                    </div>

                    <div class="form-check role-option">
                        <input class="form-check-input" type="radio" name="role" id="roleAdmin" value="Admin">
                        <label class="form-check-label w-100" for="roleAdmin">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <i class="bi bi-shield-check text-warning"></i>
                                    <strong>Administrator</strong>
                                    <br>
                                    <small class="text-muted">Manage products and inventory</small>
                                </div>
                                <i class="bi bi-check-circle text-success" style="display: none;"></i>
                            </div>
                        </label>
                    </div>
                </div>
                <input type="hidden" asp-for="Role" id="selectedRole" value="User" />
                <div class="form-text mt-2">
                    <i class="bi bi-info-circle"></i> Choose your account type carefully
                </div>
            </div>

            <button type="submit" class="btn btn-success w-100 mb-3">
                <i class="bi bi-person-plus"></i> Create Account
            </button>
        </form>

        <div class="text-center mt-3">
            <small class="text-muted">
                Already have an account?
                <a href="/Auth/Login" class="fw-bold">Login here</a>
            </small>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <style>
        .role-option {
            border: 2px solid #dee2e6;
            border-radius: 8px;
            padding: 15px;
            transition: all 0.3s;
            cursor: pointer;
        }

            .role-option:hover {
                border-color: #198754;
                background-color: #f8f9fa;
            }

            .role-option input[type="radio"]:checked ~ label {
                color: #198754;
            }

                .role-option input[type="radio"]:checked ~ label .bi-check-circle {
                    display: inline-block !important;
                }

            .role-option label {
                cursor: pointer;
                margin-bottom: 0;
            }

        .form-check-input {
            display: none;
        }

        .role-option input[type="radio"]:checked ~ label {
            font-weight: 600;
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const roleRadios = document.querySelectorAll('input[name="role"]');
            const hiddenRoleInput = document.getElementById('selectedRole');

            roleRadios.forEach(radio => {
                radio.addEventListener('change', function() {
                    hiddenRoleInput.value = this.value;

                    // Update visual feedback
                    document.querySelectorAll('.role-option').forEach(option => {
                        option.style.borderColor = '#dee2e6';
                        option.style.backgroundColor = 'transparent';
                    });

                    if (this.checked) {
                        const parentOption = this.closest('.role-option');
                        parentOption.style.borderColor = '#198754';
                        parentOption.style.backgroundColor = '#e7f7ef';
                    }
                });
            });

            // Set initial state
            const checkedRadio = document.querySelector('input[name="role"]:checked');
            if (checkedRadio) {
                checkedRadio.dispatchEvent(new Event('change'));
            }
        });
    </script>
}